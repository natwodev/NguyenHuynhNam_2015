@model NguyenHuynhNam_2015.DTOs.LoginModelDTO

<h2>Đăng nhập</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Mã số sinh viên / Nhân viên</label>
        <input asp-for="Id" class="form-control" placeholder="Nhập ID" required />
        <span class="text-danger" asp-validation-for="Id"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Mật khẩu</label>
        <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Nhập mật khẩu" required />
        <span class="text-danger" asp-validation-for="PasswordHash"></span>
    </div>
    <button type="submit" class="btn btn-primary">Đăng nhập</button>
</form>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-danger mt-3">@ViewBag.Message</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
